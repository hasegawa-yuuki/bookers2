<div class="col-md-3">
<h1>Users info</h1>

<div>
  <%= image_tag user.get_profile_image %>
  <table class="table">
  <tbody>
    <tr></tr>
    <tr><th>name</th>
  <th><%= user.name %></th></tr>
  <tr><th>introduction</th>
  <th><%= user.introduction %></th></tr></tbody></table>
  <p><%= link_to edit_user_path(user.id) ,class:"btn btn-outline-secondary btn-block" do %><i class="fa-solid fa-user-gear"></i><% end %></p></div>


<h1>New book</h1>

<%= form_with model: book do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>

  <p>Opinion</p>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book', class:"btn btn-success" %>
  
<% end %>
</div>
